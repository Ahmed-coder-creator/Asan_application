<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="helvetica"
        android:text="ASAN KÖNÜLLÜ"
        android:textColor="#2F5FFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:srcCompat="@drawable/el" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="354dp"
        android:layout_height="554dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <ImageView
            android:id="@+id/haqqimizda"
            android:layout_width="160dp"
            android:layout_height="182dp"
            android:layout_marginStart="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/haqqimizda" />

        <ImageView
            android:id="@+id/sexsikabinet"
            android:layout_width="160dp"
            android:layout_height="182dp"
            android:layout_marginEnd="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/haqqimizda"
            app:srcCompat="@drawable/sexsikabinet"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:id="@+id/imtahanlar"
            android:layout_width="160dp"
            android:layout_height="182dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/haqqimizda"
            app:srcCompat="@drawable/imtahanlar" />

        <ImageView
            android:id="@+id/muraciyet"
            android:layout_width="160dp"
            android:layout_height="182dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imtahanlar"
            app:layout_constraintTop_toBottomOf="@+id/sexsikabinet"
            app:srcCompat="@drawable/muraciyet" />

        <ImageView
            android:id="@+id/tedbirler"
            android:layout_width="160dp"
            android:layout_height="182dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imtahanlar"
            app:srcCompat="@drawable/tedbirler" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>